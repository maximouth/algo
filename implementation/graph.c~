// creer un graph de taille size
Graph *creerGraph(int size) {
  int i = 0;
  Graph *new = NULL;
  new = malloc (sizeof (Graph));

  new->size = size;

  for (i = 0; i< size ; i++) {
    new->Point[i] = malloc (sizeof (Point));
